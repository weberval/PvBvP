<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen_layout"
    android:background="#FFFFFF"> <!-- TODO: add some nice background-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/screen_title"
        />


    <Button
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:id="@+id/screen_button"
        android:layout_centerInParent="true"
        android:onClick="startGame"/>

    <Button
        android:id="@+id/gamemode"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/screen_button"
        android:onClick="gameMode"
        />

    <Button
        android:id="@+id/close_button"
        android:textAllCaps="false"
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gamemode"
        android:onClick="close"
        />

    <!-- DEBUG -->
    <Button
        android:id="@+id/DEBUG_server"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gamemode"
        android:text="DEBUG server"
        android:onClick="debug_server"
        />

    <Button
        android:id="@+id/DEBUG_client"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DEBUG_server"
        android:text="DEBUG Client"
        android:onClick="debug_client"
        />
    <!-- DEBUG -->

</RelativeLayout>